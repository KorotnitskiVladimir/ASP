@model ASP.Models.Admin.AdminIndexViewModel
@{
    ViewData["Title"] = "Admin's page";
}

<div class="text-center">
    <h1 class="display-4">Admin's page</h1>
</div>

<div class="row">
    <div class="col">
        <h2>Categories</h2>
        <form id="admin-category-form" enctype="multipart/form-data">
            Name: <input name="category-name"/><br/>
            Description: <textarea name="category-description"></textarea><br/>
            Address: <input name="category-slug"/><br/>
            Picture: <input name="category-image" type="file"/><br/>
            <button type="submit">Add</button>
        </form>
    </div>
    <div class="col">
        <h2>Products</h2>
            <form id="admin-product-form" enctype="multipart/form-data">
                Name: <input name="product-name"/><br/>
                Description: <textarea name="product-description"></textarea><br/>
                Article/code: <input name="product-slug"/><br/>
                Picture: <input name="product-image" type="file" multiple/><br/>
                Price: <input name="product-price" type="number" step="0.01"/><br/>
                Stock: <input name="product-stock" type="number" step="1"/><br/>
                Category: <select name="category-id">
                    @foreach (var c in Model.Categories)
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
                </select><br/>
                <button type="submit">Add</button>
            </form>
    </div>
</div>
<div id="alert" class="alert"></div>